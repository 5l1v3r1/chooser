{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
    ],
    "rules": {
        "quotes": ["warn", "double"],
        "comma-spacing": ["warn", {"before": false, "after": true}],
        "no-unused-vars": ["warn"],
        "indent": ["error", 4, {"SwitchCase": 1}],
        "brace-style": ["error", "stroustrup", {"allowSingleLine": true}]
    }
}